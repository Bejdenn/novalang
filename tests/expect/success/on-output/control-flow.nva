x := 12;
y := 24;

// if statement + no else
if x < 2 {
   str::print("If statement without else branch"); 
}

// if statement without statements in body (is optimized out)
// if x > 2 {}

// if statement
if x > 2 {
   str::print("Branch on true");
} else {
   str::print("Branch on else");
}

// if statements can contain more than one branch
if x > 22 {
    str::print("First branch");
} else if x < 15 {
    str::print("Second branch");
} else {
    str::print("Last branch");
}

// if expression (else branch is mandatory) 
n := when x > y {
    111
} else {
    inner_scope: int;
    inner_scope = 222;
    inner_scope
};

// if expression may contain multiple else if branches
n = when x > y {
    1
} else when x < y {
    -1
} else {
    0
};

str::print("n: " + n);

i := 0;
for i < 3 {
